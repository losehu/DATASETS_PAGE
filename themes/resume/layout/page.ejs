<div class="sidebar">
  <div class="sidebar-inner"  >
    <header class='header' >
      <h2 style="color:#845ec2;font-family: Times New Roman;"><%- page.name %></h2>
      <% if (page.job) { %>
        <p class='job'><%- page.job %></p>
      <% } %>
      <div class='meta' >
        <% (page.contact||[]).forEach(function(value){ %>
          <h3> <p ><a <%if(value.url){%>href='<%- value.url %>'<%}%> style="color:#d65db1;font-family: Times New Roman;">
            <i class="<%- value.icon %> fa-fw"></i>&nbsp;<%- value.text %></a></p></h3>
        <%})%>
      </div>
    <hr>
    </header>
    <div class="list" style="font-family: Times New Roman;">
      <ul class="menu-root">
        <% site.pages.sort('order').each(function (p) { %>
          <li>
            <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
          </li>
        <% }) %>
      </ul>
    </div>
    <% if (page.download) { %>
      <div class="footer">
        <a class="button" href="<%- page.download.url %>"><i class="<%- page.download.icon %>"></i> <%- page.download.title %></a>
      </div>
    <% } %>
    <% if (page.picture) { %>
    <div class="footer" >
      <center> <a style="font-family: Times New Roman;" ><%- page.picture.blogname %></a></center>
      <center> <h2><a style="color:#845ec2;font-family: Times New Roman;" href="<%- page.picture.blog %>"><%- page.picture.blog %></a></h2></center>
      <center><a style="font-family: Times New Roman;"><%- page.picture.title %></a></center>
      <center><img src="<%- page.picture.url %>" style="height: 160px;width: 160px; max-width: 100%; max-height: 100%;" alt="<%- page.picture.title %>"></center>
    <!--  <center>个人微信</center>
      <center><img src="https://b3logfile.com/file/2021/08/1031630411994_.pic_hd-58460640.jpg" style="height: 140px;width: 140px; max-width: 100%; max-height: 100%;"  alt="个人微信"></center>
    -->
    </div>
    <% } %>

  </div>

</div>

<div class="content with-sidebar" style="font-family: Microsoft YaHei; font-size: 1em;">
  <% 
    var homePage = (site.pages || []).find(function(p){
      return p.source === 'source/index.md' || p.path === 'index.html' || (p.source && p.source.indexOf('index.md') !== -1 && p.path && p.path.indexOf('index') !== -1);
    });
    var bg = page.title_pic || (homePage && homePage.title_pic) ;
  %>
  <div class='resume-header' style="background-image: url('<%- url_for(bg) %>'); background-position: center center; background-repeat: no-repeat; background-size: auto 90%; background-color: #ffffff; min-height: 500px; padding: 24px 0;">
    <% if (page.avatar) { %>
      <div class='avatar'><img no-lazy class='avatar' src='<%- page.avatar %>'/></div>
    <% } %>

    <b><p class='description' style="color:#fff;font-family: Arial;"><%- page.description %></p></b>

    <% if (page.social) { %>
      <div class='social-btns'>
        <% page.social.forEach((item, i) => { %>
          <a href="<%- url_for(item.url) %>" class="social-link"><i class='<%- item.icon %> fa-fw'></i><%- item.text %></a>
        <% }) %>
      </div>
    <% } %>
  </div>
  <%- page.content %>

  <!-- 已移除 Valine 留言板：如果需要恢复，请在主题配置中设置 `theme.valine` 并还原此代码块 -->
<!-- bu suan zi tong ji -->
  <script async src="//busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
 
  <% if (page.resume_footer) { %>
    <div class="resume-footer">
      <%- markdown(page.resume_footer) %>
    </div>
  <% } %>
</div>
